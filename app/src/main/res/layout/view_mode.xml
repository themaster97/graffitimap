<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/drawBut"
        android:gravity="center"
        android:layout_width="188dp"
        android:layout_height="110dp"
        android:background="?attr/btnColor"
        android:text="@string/drawButtonText"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBut" />

    <Button
        android:id="@+id/backBut"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:layout_marginBottom="184dp"
        android:background="?attr/btnColor"
        android:text="@string/backButtonText"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="88dp" />

</androidx.constraintlayout.widget.ConstraintLayout>